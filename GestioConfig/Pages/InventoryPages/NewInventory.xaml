<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestioConfig.Pages.InventoryPages.NewInventory"
             Title="NewInventory"
             IconImageSource="newinventory.png">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="20" VerticalOptions="Center">
                <Button x:Name="newinventory" Text="New inventory" Clicked="newinventory_Clicked" CornerRadius="25" BackgroundColor="LightSeaGreen" TextColor="Beige" />
                <Entry x:Name="txtName" Placeholder="Name" IsVisible="false"/>
                <Button x:Name="btnCreate" Text="create" Clicked="btnCreate_Clicked" IsVisible="false" CornerRadius="25" BackgroundColor="LightSeaGreen" TextColor="Beige" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>