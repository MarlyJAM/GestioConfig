<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="DarkCyan"
             x:Class="GestioConfig.Pages.Master"
             Title="Master">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Inventory" x:Name="btnInventory" BackgroundColor="AntiqueWhite" TextColor="Black" ImageSource="inventory.png" Clicked="BtnInventory_Clicked" />
            <Button Text="Products" x:Name="btnProducts" BackgroundColor="AntiqueWhite"  TextColor="Black"  ImageSource="product.png" Clicked="BtnProducts_Clicked" />
            <Button Text="Commandes" x:Name="btnCommandes" BackgroundColor="AntiqueWhite"  TextColor="Black" ImageSource="commande.png" Clicked="BtnCommandes_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>