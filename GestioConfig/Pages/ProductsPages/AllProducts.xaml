<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:GestioConfig.Pages" 
             x:Class="GestioConfig.Pages.ProductsPages.AllProducts"
             Title="All"
             BackgroundImageSource=""
             IconImageSource="box.png">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout  Margin="20"  Spacing="10">
                <Button Clicked="btndress_Clicked" Text="Dress" 
                        FontAttributes="Bold" FontSize="Large" 
                        BackgroundColor="#088da5" x:Name="btndress" CornerRadius="25" TextColor="Aqua" />
                <Button Clicked="btnskirt_Clicked"  Text="Skirt" 
                        FontAttributes="Bold" FontSize="Large"
                        BackgroundColor="#088da5" x:Name="btnskirt" CornerRadius="25" TextColor="Aqua" />

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>