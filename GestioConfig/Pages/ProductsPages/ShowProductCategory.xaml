<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestioConfig.Pages.ProductsPages.ShowProductCategory">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <ListView x:Name="listProducts"  IsPullToRefreshEnabled="true" ItemSelected="listProducts_ItemSelected">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding name}" Detail="{Binding quantity}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>